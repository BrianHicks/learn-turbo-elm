{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["build:elm", "build:html"]
    },
    "build:elm": {
      "inputs": ["elm.json", "src/**/*.elm"],
      "outputs": ["dist/elm.js"]
    },
    "build:html": {
      "inputs": ["src/index.html"],
      "outputs": ["dist/index.html"]
    },
    "test": {
      "dependsOn": ["test:elm"]
    },
    "test:elm": {
      "inputs": ["elm.json", "src/**/*.elm", "tests/**/*.elm"],
      "env": ["ELM_TEST_SEED"]
    }
  }
}
