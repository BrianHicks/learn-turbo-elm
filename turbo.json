{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["build:elm", "build:html", "build:js"]
    },
    "build:elm": {
      "inputs": ["elm.json", "src/**/*.elm"],
      "outputs": ["dist/elm.js"]
    },
    "build:html": {
      "inputs": ["src/index.html"],
      "outputs": ["dist/index.html"]
    },
    "build:js": {
      "inputs": ["tsconfig.json", "src/**/*.ts"],
      "outputs": ["dist/index.js"]
    },
    "test": {
      "dependsOn": ["test:elm"]
    },
    "test:elm": {
      "inputs": ["elm.json", "src/**/*.elm", "tests/**/*.elm"],
      "env": ["ELM_TEST_SEED"]
    },
    "dev": {
      "persistent": true
    },
    "dev:html": {
      "dependsOn": ["build:html"],
      "persistent": true
    },
    "dev:elm": {
      "persistent": true
    },
    "format": {
      "dependsOn": ["format:elm", "format:ts", "format:html", "format:markdown"]
    },
    "format:elm": {
      "inputs": ["src/**/*.elm"]
    },
    "format:ts": {
      "inputs": ["src/**/*.ts"]
    },
    "format:html": {
      "inputs": ["src/**/*.html"]
    },
    "format:markdown": {
      "inputs": ["**/*.md"]
    }
  }
}
