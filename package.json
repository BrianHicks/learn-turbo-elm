{
  "name": "learn-turbo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:elm": "mkdir -p dist && elm-watch make",
    "build:html": "mkdir -p dist && cp src/index.html dist/index.html",
    "build:js": "mkdir -p dist && tsc --outDir dist",
    "build:css": "mkdir -p dist && sass scss/:dist/",
    "test:elm": "elm-test --seed ${ELM_TEST_SEED:-1234567890}",
    "dev": "hivemind --no-prefix",
    "dev:elm": "elm-watch hot",
    "dev:html": "nodemon --watch src --ext html --exec 'turbo build:js'",
    "dev:ts": "tsc --watch --preserveWatchOutput --outDir dist",
    "dev:css": "nodemon --watch scss --ext scss --exec 'turbo build:css'",
    "dev:browsersync": "browser-sync start --no-open --server dist --watch dist --ignore dist/elm.js",
    "format:elm": "elm-format --yes $(find src -type f -name '*.elm')",
    "format:ts": "prettier -w $(find src -type f -name '*.ts')",
    "format:html": "prettier -w $(find src -type f -name '*.html')",
    "format:markdown": "prettier -w $(find . -type f -name '*.md')",
    "format:css": "prettier -w $(find scss -type f -name '*.scss')",
    "package:elm": "mkdir -p dist && elm-optimize-level-2 src/Main.elm --output dist/elm.js",
    "package:js": "uglifyjs --compress --mangle --in-situ -- dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.29.3",
    "elm-optimize-level-2": "^0.3.5",
    "elm-watch": "^1.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "uglify-js": "^3.17.4"
  }
}
